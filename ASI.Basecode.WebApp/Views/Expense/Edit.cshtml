@model ASI.Basecode.Services.ServiceModels.ExpenseViewModel

<div id="editExpenseModal" class="custom-modal-overlay">
    <div class="custom-modal">
        <div class="custom-modal-header">
            <h5 class="custom-modal-title">Edit Expense</h5>
            <span class="custom-modal-close" onclick="closeEditModal()">&times;</span>
        </div>
        <div class="custom-modal-body">
            <form asp-action="Edit" enctype="multipart/form-data" id="editExpenseForm">
                <input type="hidden" name="ExpenseId" asp-for="ExpenseId" />
                <div asp-validation-summary="ModelOnly" class="custom-text-danger"></div>

                <div class="form-group">
                    <label asp-for="Title" class="custom-label"></label>
                    <input name="Title" asp-for="Title" class="custom-input" id="Title"/>
                    <span asp-validation-for="Title" class="custom-text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Amount" class="custom-label"></label>
                    <input name="Amount" asp-for="Amount" class="custom-input" />
                    <span asp-validation-for="Amount" class="custom-text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="custom-label"></label>
                    <textarea name="Description" asp-for="Description" class="custom-textarea"></textarea>
                    <span asp-validation-for="Description" class="custom-text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateCreated" class="custom-label"></label>
                    <input name="DateCreated" asp-for="DateCreated" class="custom-input" type="date" />
                    <span asp-validation-for="DateCreated" class="custom-text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="custom-label"></label>
                    <select name="CategoryId" asp-for="CategoryId" class="custom-select" id="EditCategoryDropdown">
                        <option value="">-- Select Category --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="custom-text-danger"></span>
                </div>
                <div class="form-actions">
                    <input type="submit" value="Edit" class="custom-btn" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* Custom Modal Overlay */
    .custom-modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        visibility: hidden;
        opacity: 0;
        transition: opacity 0.3s ease, visibility 0.3s ease;
    }

    /* Custom Modal */
    .custom-modal {
        background-color: #f4f4f9;
        border-radius: 8px;
        width: 500px;
        max-width: 90%;
        padding: 20px;
        display: flex;
        flex-direction: column;
    }

    /* Custom Modal Header */
    .custom-modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-image: linear-gradient(to right, #4b0082, #9370db);
        color: white;
        padding: 10px;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

    .custom-modal-title {
        font-weight: bold;
        color: white;
    }

    .custom-modal-close {
        font-size: 1.5rem;
        cursor: pointer;
        color: #483d8b;
    }

    /* Modal Body */
    .custom-modal-body {
        padding: 20px;
    }

    /* Form Group */
    .form-group {
        margin-bottom: 15px;
    }

    .custom-label {
        font-weight: bold;
        color: #483d8b;
        display: block;
        margin-bottom: 5px;
    }

    .custom-input, .custom-select, .custom-textarea {
        width: 100%;
        border-radius: 5px;
        border: 1px solid #9370db;
        padding: 10px;
    }

    .custom-textarea {
        resize: vertical;
    }

    /* Custom Button */
    .form-actions {
        text-align: center;
    }

    .custom-btn {
        background-color: #483d8b;
        color: white;
        border: none;
        border-radius: 5px;
        width: 100px;
        padding: 10px;
        cursor: pointer;
    }

    .custom-text-danger {
        color: red;
    }

    /* Display Modal */
    .custom-modal-overlay.visible {
        visibility: visible;
        opacity: 1;
    }
</style>

<script>
    function openEditModal(button) {
        EditExpense(button);
        document.getElementById('editExpenseModal').classList.add('visible');
    }

    function closeEditModal() {
        document.getElementById('editExpenseModal').classList.remove('visible');
    }
</script>
