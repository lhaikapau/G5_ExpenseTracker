@using ASI.Basecode.Services.ServiceModels
@model UserViewModel
@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Register Page";
}

@section styles {
    <link rel="stylesheet" href="~/css/register.css" />
}

<div class="register-box">
    <div class="register-card">
        <div class="register-form">
            <!-- Form Title -->
            <div class="form-title">Sign Up</div>

            <!-- Register Form -->
            <form method="post" action="/Account/Register">
                <!-- Username Input -->
                <div class="input-group">
                    <label for="userId">Username</label>
                    <input type="text" id="userId" class="form-control" asp-for="UserId" placeholder="Enter user ID" />
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <!-- Name Input -->
                <div class="input-group">
                    <label for="name">Name</label>
                    <input type="text" id="name" class="form-control" asp-for="Username" placeholder="Enter name" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <!-- Password Input -->
                <div class="input-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" class="form-control" asp-for="Password" placeholder="Enter password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Confirm Password Input -->
                <div class="input-group">
                    <label for="confirmpassword">Confirm Password</label>
                    <input type="password" id="confirmpassword" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Button Group -->
                <div class="button-group">
                    <button class="register-btn" type="submit">Register</button>
                    <a asp-controller="Account" asp-action="Login" class="back-link">&#8592; Back to Sign In</a>
                </div>
            </form>
        </div>

        <!-- Register Image Section -->
        <div class="register-image">
            <img src="~/img/PocketPAL.png" alt="PocketPAL Logo" class="register-logo">
        </div>
    </div>

    <!-- Background Circles -->
    <div class="background-shape circle-one"></div>
    <div class="background-shape circle-two"></div>
</div>

@section scripts {
    <script>
        // Check for error message and display Toastr notification
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);
        }
    </script>
}
