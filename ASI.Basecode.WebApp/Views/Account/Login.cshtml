@model LoginViewModel
@using static ASI.Basecode.Resources.Views.Screen

@section styles {
    <style>
        /* Global Styles */
        body {
            background-color: #e1d6f5;
            font-family: 'Nunito', sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        html, body {
            height: 100%;
            margin: 0;
        }

        /* Centering the login container */
        .login_container {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            height: 100vh;
            padding: 20px;
            box-sizing: border-box;
            margin: 0;
        }

        /* Login Card Styles */
        .login-card {
            display: flex;
            width: 100%;
            max-width: 1000px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background: white;
        }

        /* Login Form */
        .login-form {
            flex: 1;
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            width: 50%;
        }

        /* Sign in label */
        .sign-in-label h1 {
            font-size: 36px;
            font-weight: bold;
            color: #483D8B; /* New color for Sign In text */
            margin-bottom: 30px;
        }

        /* Input Styling */
        .input-group {
            margin-bottom: 25px;
        }

            .input-group label {
                font-size: 16px;
                font-weight: 600;
                color: #333;
                margin-bottom: 8px;
            }

            .input-group .form-control {
                width: 100%;
                padding: 12px;
                font-size: 16px;
                border: 2px solid #ccc;
                border-radius: 6px;
                outline: none;
                margin-top: 8px;
            }

                .input-group .form-control:focus {
                    border-color: #9370DB;
                }

        /* Button Styling */
        .button-group {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .login-btn {
            background-color: #9370DB;
            color: white;
            padding: 12px 15px;
            border: none;
            border-radius: 10px;
            width: 100%;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

            .login-btn:hover {
                background-color: #483D8B;
            }

        /* Forgot Password and Signup Link Styling */
        .forgot-password {
            margin-top: 10px;
        }

            .forgot-password a {
                text-decoration: none;
                font-size: 16px;
                color: #483D8B;
            }

        .signup-link {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 20px;
            margin-left: 10px;
            gap: 20px; /* Adds space between the text and button */
        }

        .signup-link p {
            margin-right: 10px;
            margin-top: 15px; /* Adds space above the label to move it lower */
        }

        .signup-link {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 20px;
        }

        .signup-btn {
            border: 2px solid #9370DB;
            color: #9370DB;
            padding: 10px 20px;
            font-size: 14px;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

         .signup-btn:hover {
            background-color: #483D8B; /* Change hover background to #483D8B */
            color: white; /* Keep the text color white */
         }

        /* Logo on the right */
        .login-image {
            width: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            padding-left: 20px;
        }

            .login-image .logo-right {
                width: 500px; /* Increase size as needed */
                height: auto; /* Maintain aspect ratio */
                object-fit: contain;
            }
        .logo-right {
            width: 200px; /* Adjust size as needed */
            object-fit: contain; /* Ensure the logo maintains its aspect ratio */
        }

    </style>

    <!-- Google Fonts link for Nunito font -->
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap" rel="stylesheet">
}

@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Login Page";
}

<div>
    @Html.AntiForgeryToken()
</div>

<div class="login_container">
    <div class="login-card">
        <div class="login-form">
            <!-- Sign in label at the top of the form -->
            <div class="sign-in-label">
                <h1>Sign In</h1>
            </div>

            <form method="post" action="/Account/Login" id="loginForm">
                <div class="input-group">
                    <label for="form2Example11">Username</label>
                    <input type="text" id="form2Example11" class="form-control" asp-for="UserId" placeholder="Enter username" />
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <div class="input-group">
                    <label for="form2Example22">@Password</label>
                    <input type="password" id="form2Example22" class="form-control" asp-for="Password" placeholder="Enter password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="button-group">
                    <button class="login-btn" type="submit">@Login</button>
                    <div class="forgot-password">
                        <a href="#">@ForgotPass</a>
                    </div>
                </div>

                <div class="signup-link">
                    <p>@DontHaveAcc</p>
                    <a asp-controller="Account" asp-action="Register" class="signup-btn">@CreateNew</a>
                </div>
            </form>
        </div>

        <!-- Logo on the right side -->
        <div class="login-image">
            <img src="~/img/PocketPAL.png" alt="Logo" class="logo-right">
        </div>
    </div>
</div>

@section scripts {
    <script>
        // Check for error message and display Toastr notification
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);
        }
    </script>
}
