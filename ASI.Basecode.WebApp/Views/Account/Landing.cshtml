@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@using static ASI.Basecode.Resources.Views.Screen

@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Landing Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PocketPal Tracker</title>
</head>
<body style="margin: 0; padding: 0; background-color: white;">

    <!-- Header Section with conditional navbar visibility -->
    <header2 class="@(ViewBag.LoginView == true)">
        <div style="background-color: #5C3E9C; padding: 20px; width: 100%; box-sizing: border-box; align-items: center;">
            <span style="color: white; font-size: 30px; font-weight: 500;">PocketPal</span>
        </div>
    </header2>

    <!-- Main Content Section with modified styles -->
    <div style="display: flex; justify-content: space-between; align-items: center; padding: 40px; max-width: 95%; margin: 0 auto; box-sizing: border-box;">

        <!-- Left Side Content -->
        <div style="max-width: 50%; margin-top: 40px;">
            <p style="color: #5C3E9C; font-size: 18px; margin: 0;">- Track your expenses and gain</p>
            <h1 style="font-size: 48px; font-weight: bold; margin: 10px 0;">The best way to track your expenses.</h1>
            <p style="font-size: 18px; color: #555;">Let PocketPal help you manage your finances.</p>

            <div style="margin-top: 60px;">
                <button style="background-color: #5C3E9C; color: white; border: none; border-radius: 10px; padding: 10px 20px; font-size: 18px; cursor: pointer; margin-right: 10px;"
                        onclick="window.location.href=window.location.origin + '/Account/Login'">
                    Log in
                </button>
                <button style="background-color: #5C3E9C; color: white; border: none; border-radius: 10px; padding: 10px 20px; font-size: 18px; cursor: pointer;"
                        onclick="window.location.href='/Account/Register'">
                    Sign up now
                </button>
            </div>
        </div>

        <!-- Right Side Logo -->
        <div class="login-image">
            <!-- PAL POCKET TRACKER Logo on the Right -->
            <img src="~/img/PocketPAL.png" alt="PAL POCKET TRACKER Logo" class="logo">
        </div>
    </div>
    <!-- Background Circles for Login UI -->
    <div class="background-shape circle-three"></div>
    <div class="background-shape circle-four"></div>
</body>
</html>