@model IEnumerable<ASI.Basecode.Services.ServiceModels.CategoryViewModel>

@{
    ViewData["Title"] = "Category Page";
}

<h1>Categories</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)  // Assuming Categories is a list in the CategoryViewModel
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                   @Html.ActionLink("Edit", "Edit", new { CategoryId = item.CategoryId }) |
                    @Html.ActionLink("Delete", "Delete", new { CategoryId = item.CategoryId }) |
                </td>
            </tr>
        }
    </tbody>
</table>


